import os, sys, time, subprocess, datetime, colorama, random, requests

SLYNKK_VERSION = "0.0.4"

# Initialize colorama

colorama.init()

logo = """
//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\//\\\\
                                                            
      ‚ñí‚ñà‚ñà‚ñà‚ñà‚ñí   ‚ñà‚ñà‚ñà‚ñà                          ‚ñà‚ñà        ‚ñà‚ñà       
     ‚ñí‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà   ‚ñà‚ñà‚ñà‚ñà                          ‚ñà‚ñà        ‚ñà‚ñà       
     ‚ñà‚ñà‚ñí  ‚ñí‚ñà     ‚ñà‚ñà                          ‚ñà‚ñà        ‚ñà‚ñà       
     ‚ñà‚ñà          ‚ñà‚ñà      ‚ñà‚ñà‚ñì  ‚ñì‚ñà‚ñà  ‚ñà‚ñà‚ñë‚ñà‚ñà‚ñà‚ñà   ‚ñà‚ñà  ‚ñì‚ñà‚ñà‚ñí  ‚ñà‚ñà  ‚ñì‚ñà‚ñà‚ñí 
     ‚ñà‚ñà‚ñà‚ñí        ‚ñà‚ñà      ‚ñí‚ñà‚ñà  ‚ñà‚ñà‚ñì  ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñì  ‚ñà‚ñà ‚ñì‚ñà‚ñà‚ñí   ‚ñà‚ñà ‚ñì‚ñà‚ñà‚ñí  
