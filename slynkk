# colorize the logo


def bold(text):
    return f"{colorama.Style.BRIGHT}{text}{colorama.Style.RESET_ALL}"

def color(text, color):
    return f"{color}{text}{colorama.Fore.RESET}"

def getPrompt():
    cwd = os.getcwd()
    user = os.getlogin()
    if os.getuid() == 0:
        user = color("root", colorama.Fore.RED)
    hostname = os.uname()[1]
    time = datetime.datetime.now().strftime("%H:%M:%S")
    return f"{bold('‚ïî<')}{colorama.Style.BRIGHT}{colorama.Fore.GREEN}{user}{colorama.Fore.RESET}{colorama.Style.RESET_ALL}{colorama.Fore.RED}@{colorama.Style.BRIGHT}{colorama.Fore.GREEN}{hostname}{colorama.Fore.RESET}:{colorama.Fore.GREEN}{color(cwd,colorama.Fore.BLUE)}{colorama.Fore.RESET}{bold('>')}\n{bold('‚ïë')} {colorama.Fore.GREEN}Time: {time}{colorama.Fore.RESET}\n{bold('‚ïë')}    \n{bold('‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ó∏')} "

# colorize the logo
colors = [colorama.Fore.RED, colorama.Fore.GREEN, colorama.Fore.YELLOW, colorama.Fore.BLUE, colorama.Fore.MAGENTA, colorama.Fore.CYAN]
primary = color("‚ñà", colorama.Fore.CYAN)
secondary = color("‚ñì", colorama.Fore.BLUE)
logo = logo.replace("‚ñà", primary)
logo = logo.replace("‚ñì", secondary)
logo = logo.replace("‚ñí", color("‚ñí", colorama.Fore.RED))
logo = logo.replace("‚ñë", color("‚ñë", colorama.Fore.MAGENTA))
os.system("clear")
logo = bold(logo)
print(logo)

# set shell name to slynkk
os.environ["PS1"] = "slynkk"

while True:
    command = input(getPrompt())
    if command.split()[0] == "cd":
        os.chdir(command.split()[1])
    else:
        os.system(command)
